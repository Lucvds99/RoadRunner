<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoadRunnerApp.Views.LanguageSelectionPage"
             Title="LanguageSelectionPage">
    <StackLayout Margin="20">
        <Label Text="Please select a language"
               HorizontalOptions="Center" />
        <!-- Use FillAndExpand for the HorizontalStackLayout -->
        <HorizontalStackLayout HorizontalOptions="Center" Margin="5">
            <Button x:Name="SelectButtonNL"
                    Text="NL"
                    Clicked="OnSelectButtonClicked"
                    BackgroundColor="{Binding ButtonBackgroundColor}"
                    TextColor="{Binding ButtonTextColor}"
                    CornerRadius="10"
                    Padding="10"
                    Margin="20"
                    HorizontalOptions="FillAndExpand" />
            <Button x:Name="SelectButtonENG"
                    Text="ENG"
                    Clicked="OnSelectButtonClicked"
                    BackgroundColor="{Binding ButtonBackgroundColor}"
                    TextColor="{Binding ButtonTextColor}"
                    Padding="10"                    
                    Margin="20"
                    CornerRadius="10"
                    HorizontalOptions="FillAndExpand" />
        </HorizontalStackLayout>
    </StackLayout>
</ContentPage>